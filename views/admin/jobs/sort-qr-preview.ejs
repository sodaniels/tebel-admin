<%- include('../../includes/admin/top-with-style.ejs') %>
    </head>

    <body id="theme-default" class="full_block">


        <div id="left_bar">
            <%- include('../../includes/admin/side-menu.ejs') %>
        </div>

        <div id="container">
            <%- include('../../includes/admin/header-banner.ejs') %>
                <div class="page_title">
                    <span class="title_icon"><span class="users"></span></span>
                </div>

                <div class="content" style="margin-top: -28em !important;">
                    <%if (errors.length> 0) { %>
                        <% errors.forEach(error=> { %>
                            <blockquote class="quote_orange">
                                <p>
                                    <%- error.msg %>
                                </p>
                            </blockquote>
                            <% }) %>
                                <% } %>
                                    <div style="margin: 3em;">
                                        <div class="widget_wrap tabby">

                                            <div class="widget_content">

                                                <div id="tab1">
                                                    <div id="content">
                                                        <div class="grid_container">

                                                            <div class="grid_12">
                                                                <div class="widget_wrap">
                                                                    <div class="widget_content">
                                                                        <form action="#" method="POST"
                                                                            class="form_container left_label">
                                                                            <input type="hidden" name="_csrf"
                                                                                value="<%= csrfToken %>">
                                                                            <ul style="float: right;">
                                                                                <li>
                                                                                    <div class="form_grid_12">
                                                                                        <div class="form_input">
                                                                                            <button type="button"
                                                                                                class="btn_small btn_orange"
                                                                                                onclick="printPreview()">
                                                                                                Print
                                                                                            </button>
                                                                                        </div>
                                                                                    </div>
                                                                                </li>
                                                                            </ul>
                                                                        </form>

                                                                        <table class="display data_tbl">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th>
                                                                                        Owner
                                                                                    </th>
                                                                                    <th>
                                                                                        Barcode
                                                                                    </th>
                                                                                </tr>
                                                                            </thead>
                                                                            <tbody>
                                                                                <% dustbinData.forEach((item, index)=>
                                                                                    { %>
                                                                                    <tr>
                                                                                        <td>
                                                                                            <%= item.owner.firstName
                                                                                                + ' '
                                                                                                +item.owner.middleName
                                                                                                + ' '
                                                                                                +item.owner.lastName %>
                                                                                        </td>
                                                                                        <td style="width: 500px;">
                                                                                            <img style="height:200px"
                                                                                                src="../../../barcodes/<%= item.barcode +'.png' %>">
                                                                                        </td>

                                                                                    </tr>
                                                                                    <% }) %>

                                                                            </tbody>
                                                                            <tfoot>
                                                                                <tr>
                                                                                    <th>
                                                                                        Owner
                                                                                    </th>
                                                                                    <th>
                                                                                        Barcode
                                                                                    </th>
                                                                                </tr>

                                                                            </tfoot>
                                                                        </table>

                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>
                                                        <span class="clear"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                </div>
        </div>

        </div>
        <span class="clear"></span>
        </div>



        </div>
    </body>

    </div>
    <script>
        function printPreview() {
            // Hide the menu
            document.querySelector('.left_bar').style.display = 'none';
            // Call window.print() to open print dialog
            window.print();
            // Show the menu again after printing
            document.querySelector('.left_bar').style.display = 'block';
        }
    </script>

    <style>
        @media print {
            .left_bar {
                display: none !important;
            }
        }
    </style>

    </html>